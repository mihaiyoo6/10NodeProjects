extends ../../layouts/default

block head
	title Events Page

block body
	div.row
		div.col-md-8
			div.page-header
				h1 View Events
			if data
				ul.events
					each event, i  in data
						li
							strong #{event.name}
							&nbsp;&nbsp;
							i.fa.fa-pencil
							a(href='/events/edit/#{event._id}') Edit
							&nbsp;&nbsp;
							i.fa.fa-trash
							a(href='#test' class='event-detele' data-event-id='#{event._id}') Delete
			else
				p You Have no Events.
div.col-md-4
			div.page-header
				h1 SideBar