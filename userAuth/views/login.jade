extends layout

block content
    .container
        h1 Login
        p Please Login using the form below
        form(method='post', action='/users/login')
            .form-group
                label User Name
                input.form-control(name='userName', type='text', placeholder="Enter User Name")
            .form-group
                label Password
                input.form-control(name='password', type='password', placeholder="Enter Password")
            input.btn.btn-default(name='submit', type='submit', vaue='Login')


