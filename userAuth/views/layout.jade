doctype html
html
	head
		title= title
		title= title
		meta( http-equiv='X-UA-Compatible', content='IE=edge' )
		meta(  name='viewport' content='width=device-width, initial-scale=1')
		link( rel='stylesheet', href='/stylesheets/bootstrap.css' )
		link( rel='stylesheet', href='/stylesheets/style.css' )
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.navbar-hearder
				button.navbar-toggle.collapesed(type='button', data-toogle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='nav-bar')
				span.sr-only ToggleNavigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
				a.navbar-brand( href='#' ) LOGO
			#navbar.collapse.navbar-collapse
				ul.nav.navbar-nav
					li(class=(title === 'Members' ? 'active' : ''))
						a(href='/') Members
					if !user
						li(class=(title === 'Register' ? 'active' : ''))
							a(href='/users/register') Register
						li(class=(title === 'Login' ? 'active' : ''))
							a(href='/users/login') Login
				.container
					ul.nav.navbar-nav.navbar-right
						if user
							li(class=(title === 'Logout' ? 'active' : ''))
								a(href='/users/logout') Logout
		!= messages()
		block content

